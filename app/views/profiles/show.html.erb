<div class="container mx-auto px-4 py-8">
    <div class="max-w-3xl mx-auto">
        <div class="flex justify-between items-center mb-8">
            <h1 class="text-3xl"><%= t('.title') %></h1>
            <%= link_to t('profiles.show.edit'), edit_profile_path, class: 'btn btn-success float-right'%>
        </div>
        <div class="bg-white shadow-md rounded-lg overflow-hidden">
            <table class="w-full">
                <tbody>
                    <tr class="border-b">
                        <th scope="row"
                            class="px-6 py-4 bg-gray-50 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                            <%= User.human_attribute_name(:email) %>
                        </th>
                        <td class="px-6 py-4 whitespace-nowrap">
                            <%= current_user.email %>
                        </td>
                    </tr>
                    <tr class="border-b">
                        <th scope="row"
                            class="px-6 py-4 bg-gray-50 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                            <%= User.human_attribute_name(:full_name) %>
                        </th>
                        <td class="px-6 py-4 whitespace-nowrap">
                            <%= current_user.decorate.full_name %>
                        </td>
                    </tr>
                    <tr>
                        <th scope="row"
                            class="px-6 py-4 bg-gray-50 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                            <%= User.human_attribute_name(:avatar) %>
                        </th>
                        <td class="px-6 py-4 whitespace-nowrap">
                            <%= image_tag current_user.avatar_url, class: 'rounded-full', width: 50, height: 50 %>
                        </td>
                    </tr>
                </tbody>
            </table>
        </div>
    </div>
</div>