<% content_for(:title, t('.title')) %>
<div class="container mx-auto px-4">
  <div class="flex justify-center">
    <div class="w-full max-w-md lg:max-w-lg">
      <h1 class="text-2xl font-bold mb-6"><%= t('.title') %></h1>
      <%= form_with url: password_resets_path, method: :post, local: true, class: "space-y-4" do |f| %>
        <div class="form-control">
          <%= f.label :email, User.human_attribute_name(:email), class: "label" %>
          <%= f.text_field :email, class: "input input-bordered w-full" %>
        </div>
        <%= f.submit "送信", class: "btn btn-primary w-full" %>
      <% end %>
    </div>
  </div>
</div>