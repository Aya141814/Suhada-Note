<% content_for(:title, t('.title')) %>
<div class="container mx-auto px-4 py-8">
  <div class="flex justify-center">
    <div class="w-full max-w-md lg:max-w-lg">
      <div class="card bg-base-100 shadow-xl">
        <div class="card-body">
          <h1 class="card-title text-2xl font-bold mb-6 justify-center"><%= t('.title') %></h1>
          
          <%= form_with model: @user, url: password_reset_path(@token), local: true, class: "space-y-6" do |f| %>
            <%= render "shared/error_messages", object: f.object %>
            
            <div class="form-control">
              <label class="label">
                <span class="label-text font-medium"><%= f.label :email %></span>
              </label>
              <div class="input input-bordered bg-base-200 flex items-center">
                <%= @user.email %>
              </div>
            </div>

            <div class="form-control">
              <label class="label">
                <span class="label-text font-medium"><%= User.human_attribute_name(:password) %></span>
              </label>
              <%= f.password_field :password, class: "input input-bordered w-full focus:input-primary", placeholder: "新しいパスワードを入力" %>
            </div>

            <div class="form-control">
              <label class="label">
                <span class="label-text font-medium"><%= User.human_attribute_name(:password_confirmation) %></span>
              </label>
              <%= f.password_field :password_confirmation, class: "input input-bordered w-full focus:input-primary", placeholder: "パスワードを再入力" %>
            </div>
            
            <div class="form-control mt-8">
              <%= f.submit "更新する", class: "btn btn-primary w-full" %>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>