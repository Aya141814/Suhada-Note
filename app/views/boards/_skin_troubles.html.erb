<div class="mb-6">
    <p class="text-lg font-medium text-gray-700 mb-3">使用した肌トラブル</p>
    <div class="grid grid-cols-2 md:grid-cols-3 gap-4">
        <%= f.collection_check_boxes :skin_trouble_ids, 
                                    @skin_troubles, 
                                    :id, 
                                    :name do |b| %>
            <div class="relative flex items-center">
                <%= b.check_box class: "peer h-5 w-5 cursor-pointer appearance-none rounded border border-gray-300 checked:border-indigo-500 checked:bg-indigo-500 hover:border-indigo-500 focus:outline-none focus:ring-2 focus:ring-indigo-200" %>
                <div class="pointer-events-none absolute text-white opacity-0 peer-checked:opacity-100">
                    <svg class="h-5 w-5" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
                    </svg>
                </div>
                <%= b.label class: "ml-3 text-sm font-medium text-gray-700 cursor-pointer" %>
            </div>
        <% end %>
    </div>
</div>