<div class="form-control mb-4">
    <label class="label">
        <span class="text-lg font-medium text-gray-700 mb-3">公開設定</span>
    </label>
    <div class="flex flex-col sm:flex-row gap-4">
        <label class="flex items-center gap-2 cursor-pointer">
            <%= f.radio_button :is_public, true, class: "radio" %>
            <span class="text-neutral">公開</span>
        </label>
        <label class="flex items-center gap-2 cursor-pointer">
            <%= f.radio_button :is_public, false, class: "radio" %>
            <span class="text-neutral">非公開</span>
        </label>
    </div>
</div>