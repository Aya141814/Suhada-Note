<% content_for(:title, t('.title')) %>
<div class="container mx-auto px-4 flex flex-col flex-grow h-full">
    <div class="max-w-2xl mx-auto flex flex-col justify-center flex-grow py-10">
        <h1 class="text-3xl font-bold mb-8 text-center"><%= t(".title") %></h1>
        <div class="flex justify-center mb-4">
            <button class="gsi-material-button"
                onclick="location.href='<%= auth_at_provider_path(provider: :google) %>'">
                <div class="gsi-material-button-state"></div>
                <div class="gsi-material-button-content-wrapper">
                    <div class="gsi-material-button-icon">
                        <svg version="1.1" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 48 48"
                            xmlns:xlink="http://www.w3.org/1999/xlink" style="display: block;">
                            <path fill="#EA4335"
                                d="M24 9.5c3.54 0 6.71 1.22 9.21 3.6l6.85-6.85C35.9 2.38 30.47 0 24 0 14.62 0 6.51 5.38 2.56 13.22l7.98 6.19C12.43 13.72 17.74 9.5 24 9.5z">
                            </path>
                            <path fill="#4285F4"
                                d="M46.98 24.55c0-1.57-.15-3.09-.38-4.55H24v9.02h12.94c-.58 2.96-2.26 5.48-4.78 7.18l7.73 6c4.51-4.18 7.09-10.36 7.09-17.65z">
                            </path>
                            <path fill="#FBBC05"
                                d="M10.53 28.59c-.48-1.45-.76-2.99-.76-4.59s.27-3.14.76-4.59l-7.98-6.19C.92 16.46 0 20.12 0 24c0 3.88.92 7.54 2.56 10.78l7.97-6.19z">
                            </path>
                            <path fill="#34A853"
                                d="M24 48c6.48 0 11.93-2.13 15.89-5.81l-7.73-6c-2.15 1.45-4.92 2.3-8.16 2.3-6.26 0-11.57-4.22-13.47-9.91l-7.98 6.19C6.51 42.62 14.62 48 24 48z">
                            </path>
                            <path fill="none" d="M0 0h48v48H0z"></path>
                        </svg>
                    </div>
                    <span class="gsi-material-button-contents">Sign in with Google</span>
                    <span style="display: none;">Sign in with Google</span>
                </div>
            </button>
        </div>
        <div class="mt-4 text-center">
            <span class="text-gray-500">-------------- OR --------------</span>
        </div>
        <%= form_with url: login_path, class: "space-y-6" do |f| %>
        <div>
            <%= f.label :email, 
            class: "block text-sm font-medium text-gray-700 mb-1" %>
            <%= f.email_field :email, 
            class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500" %>
        </div>

        <div>
            <%= f.label :password, 
            class: "block text-sm font-medium text-gray-700 mb-1" %>
            <%= f.password_field :password, 
            class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500" %>
        </div>

        <div class="flex items-center justify-center">
            <%= f.submit t(".login"), 
            class: "w-full py-2 px-4 border border-transparent rounded-md shadow-sm text-sm font-medium text-white bg-indigo-600 hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500" %>
        </div>
        <% end %>

        <div class="mt-6 space-y-2 text-center">
            <%= link_to t(".to_register_page"), new_user_path, class: "block text-sm text-indigo-600 hover:text-indigo-500" %>

            <%= link_to t(".password_forget"), new_password_reset_path, class: "block text-sm text-indigo-600 hover:text-indigo-500" %>
        </div>
    </div>
</div>